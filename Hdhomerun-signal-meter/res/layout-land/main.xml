<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:zaren="http://schemas.android.com/apk/res/com.zaren"
        android:layout_height="fill_parent"
        android:baselineAligned="true"
        android:layout_width="fill_parent"
        android:orientation="vertical">
    <!--    <LinearLayout android:id="@+id/linearLayout7" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads">-->
    <!--       <com.google.ads.AdView android:layout_height="wrap_content" android:layout_width="wrap_content" ads:adSize="BANNER" ads:adUnitId="a14e6d7a1b7ed1a" android:id="@+id/adView" android:layout_gravity="bottom"/>-->
    <!--    </LinearLayout>-->
    <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

        <TableLayout
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tableLayout1">

            <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tableRow7">

                <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/device_label"
                            android:id="@+id/textView10"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="center_vertical"></TextView>

                    <com.zaren.HdhomerunSignalMeterLib.ui.ArraySpinner
                            android:id="@+id/deviceSpinner"
                            android:layout_height="wrap_content"
                            android:layout_width="123dp"
                            zaren:ignoreFirst="false"
                            android:layout_gravity="center"></com.zaren.HdhomerunSignalMeterLib.ui.ArraySpinner>

                    <ImageButton
                            android:layout_height="50dp"
                            android:id="@+id/refreshDevicesButton"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_menu_refresh"
                            android:scaleType="fitCenter"
                            android:padding="0dp"
                            android:minWidth="75dp"></ImageButton>
                </LinearLayout>
            </TableRow>

            <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:id="@+id/tableRow1">

                <TextView
                        android:text="@string/channel_label"
                        android:id="@+id/textView1"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="0dp"></TextView>

                <TextView
                        android:text="@string/none_label"
                        android:id="@+id/channelTextView"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="0dp"></TextView>
            </TableRow>

            <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:id="@+id/tableRow2">

                <TextView
                        android:text="@string/signal_strength_label"
                        android:id="@+id/textView3"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="0dp"></TextView>

                <com.zaren.HdhomerunSignalMeterLib.ui.SigStrengthProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:id="@+id/signalStrengthBar"></com.zaren.HdhomerunSignalMeterLib.ui.SigStrengthProgressBar>
            </TableRow>

            <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:id="@+id/tableRow3">

                <TextView
                        android:text="@string/snr_quality_label"
                        android:id="@+id/textView4"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="0dp"></TextView>

                <com.zaren.HdhomerunSignalMeterLib.ui.SnrQualityProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:id="@+id/snrQualBar"></com.zaren.HdhomerunSignalMeterLib.ui.SnrQualityProgressBar>
            </TableRow>

            <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:id="@+id/tableRow4">

                <TextView
                        android:text="@string/sym_quality_label"
                        android:id="@+id/textView5"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="0dp"></TextView>

                <com.zaren.HdhomerunSignalMeterLib.ui.SymbolQualityProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:id="@+id/symQualhBar"></com.zaren.HdhomerunSignalMeterLib.ui.SymbolQualityProgressBar>
            </TableRow>

            <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:id="@+id/tableRow5">

                <TextView
                        android:text="@string/data_rate_label"
                        android:id="@+id/textView6"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="0dp"></TextView>

                <TextView
                        android:text="@string/zero_label"
                        android:id="@+id/dataRateText"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="0dp"></TextView>
            </TableRow>

            <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:id="@+id/tableRow6">

                <TextView
                        android:text="@string/network_rate_label"
                        android:id="@+id/textView8"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="0dp"></TextView>

                <TextView
                        android:text="@string/zero_label"
                        android:id="@+id/networkDataRate"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="0dp"></TextView>
            </TableRow>
        </TableLayout>

        <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

            <com.zaren.HdhomerunSignalMeterLib.ui.ArraySpinner
                    android:id="@+id/channelMapSpinner"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center_vertical"
                    zaren:ignoreFirst="true"></com.zaren.HdhomerunSignalMeterLib.ui.ArraySpinner>

            <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">

                <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="98dp"
                        android:id="@+id/channelText"
                        android:layout_weight="0.23"
                        android:inputType="number"
                        android:layout_gravity="center_vertical"></EditText>

                <Button
                        android:layout_height="wrap_content"
                        android:id="@+id/tuneButton"
                        android:layout_width="wrap_content"
                        android:text="@string/tune_button_label"
                        android:layout_weight="0.42"
                        android:layout_gravity="center_vertical"></Button>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_height="46dp"
                    android:layout_width="fill_parent">

                <ImageButton
                        android:layout_height="50dp"
                        android:id="@+id/scanBackButton"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_menu_rrwd"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical"
                        android:padding="0dp"
                        android:minWidth="75dp"></ImageButton>

                <ImageButton
                        android:id="@+id/scanForwardButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_menu_ffwd"
                        android:padding="0dp"
                        android:layout_gravity="center_vertical"
                        android:minWidth="75dp"/>

            </LinearLayout>

            <com.zaren.HdhomerunSignalMeterLib.ui.ArraySpinner
                    android:id="@+id/programSpinner"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    zaren:ignoreFirst="true"></com.zaren.HdhomerunSignalMeterLib.ui.ArraySpinner>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads">

        <com.google.ads.AdView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="a14e6d7a1b7ed1a"
                android:id="@+id/adView"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
